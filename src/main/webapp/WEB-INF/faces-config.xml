<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_2.xsd"
              version="2.1">
    
    <!-- converters -->
    <converter>
        <converter-for-class>java.lang.String</converter-for-class>
        <converter-class>workcenter.util.converters.EmptyStringToNull</converter-class>
    </converter>
    
    <converter>
        <converter-id>nombreConverter</converter-id>
        <converter-class>workcenter.util.converters.NombreConverter</converter-class>
    </converter>
    
    <converter>
        <converter-id>rutConverter</converter-id>
        <converter-class>workcenter.util.converters.RutConverter</converter-class>
    </converter>
    
    <converter>
        <converter-id>fechaConverter</converter-id>
        <converter-class>workcenter.util.converters.FechaConverter</converter-class>
    </converter>
    
    <converter>
        <converter-id>entityConverter</converter-id>
        <converter-class>workcenter.util.converters.EntityConverter</converter-class>
    </converter>

    <application>
        <message-bundle>JsfMessageResources</message-bundle>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>

        <locale-config>
            <default-locale>es</default-locale>
            <supported-locale>es</supported-locale>
        </locale-config>
    </application>
</faces-config>
 